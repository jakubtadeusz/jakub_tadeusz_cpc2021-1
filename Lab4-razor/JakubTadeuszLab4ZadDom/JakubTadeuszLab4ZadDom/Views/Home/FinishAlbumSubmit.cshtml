
@model ContactDataViewModel

@{
    AlbumViewModel album = ViewBag.Album;
}
<h3>Please check if everything is alright</h3>
<div style="display: flex; flex-direction: column; align-items: center; justify-content: space-between; width: 70%">
    <h3>Author: @album.Author</h3>
    <img src='@Url.Content(album.AlbumImage)' alt="@album.AlbumName" class="img-thumbnail" style="height: 100px; width: 100px;" />
    <h3>Album name: @album.AlbumName</h3>
    Release date: @album.AlbumReleaseDate.Date.ToString("yyyy")
    <h4>Price: @album.Price zł</h4>
</div>
@using (Html.BeginForm("SubmitAlbumGreeting", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h4>Your email:</h4>
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <h4>Your Phone number:</h4>
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <h4>Your Name:</h4>
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <h4>Your Surname:</h4>
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send" class="btn btn-success" />
        </div>
    </div>
}
