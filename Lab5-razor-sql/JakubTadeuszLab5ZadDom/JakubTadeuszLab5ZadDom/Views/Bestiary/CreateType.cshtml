@model BeastType


@{
    ViewData["Title"] = "Dodaj nowy typ potwora";
}
<!--Formularz tworzący typ potwora-->
@using (Html.BeginForm("CreateType", "Bestiary", FormMethod.Post))
{
    <div class="form-group">
        Nazwa
        <div class="col-md">@Html.TextBoxFor(model => model.Name, new { placeholder = "Podaj nazwę..." })</div>
    </div>
    <div class="form-group">
        Opis
        <div class="col-md">@Html.TextAreaFor(model => model.Description, new { style = "width: 60%; height: 200px;", placeholder = "Podaj opis.." })</div>
    </div>
    <input type="submit" value="Dodaj typ bestii" class="btn btn-primary" />
}
