@model Contract
@{ 
    ViewData["Title"] = "Utwórz zlecenie";
}
<!--Formularz tworzacy zlecenie-->
@using (Html.BeginForm("CreateContract", "Contracts", FormMethod.Post))
{

    <div class="form-group">
        Nazwa ogłoszenia
        <div class="col-md">@Html.TextBoxFor(model => model.Name, new { style = "width: 40%", placeholder = "Podaj nazwę ogłoszenia..." })</div>
    </div>    
    
    <div class="form-group">
        Imię wystawiającego ogłoszenie
        <div class="col-md">@Html.TextBoxFor(model => model.ContractorName, new { style = "width: 40%", placeholder = "Podaj swoje imię..." })</div>
    </div>    
    
    <div class="form-group">
        Region, którego dotyczy ogłoszenie
        <div class="col-md">@Html.TextBoxFor(model => model.Region, new { style = "width: 40%", placeholder = "Podaj region, którego dotyczy ogłoszenie..." })</div>
    </div>    
    
    <div class="form-group">
        Numer kontaktowy
        <div class="col-md">@Html.TextBoxFor(model => model.PhoneNumber, new { style = "width: 40%", placeholder = "Podaj numer kontaktowy..." })</div>
    </div>    
    
    <div class="form-group">
        Nagroda
        <div class="col-md">@Html.TextBoxFor(model => model.Prize, new { style = "width: 40%", placeholder = "Podaj nagrodę..." })</div>
    </div>    
    
    <div class="form-group">
        Opis ogłoszenia
        <div class="col-md">@Html.TextAreaFor(model => model.Description, new { style = "width: 60%; height: 200px", placeholder = "Podaj opis ogłoszenia..." })</div>
    </div>

    <input type="submit" value="Dodaj nowe ogłoszenie" class="btn btn-primary" />
} 