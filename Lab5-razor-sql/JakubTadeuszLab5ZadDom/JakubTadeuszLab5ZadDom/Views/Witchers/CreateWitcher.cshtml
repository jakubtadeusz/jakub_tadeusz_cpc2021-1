@model Witcher
<!--Formularz tworzący nowego wiedźmina-->
@using (Html.BeginForm("CreateWitcher", "Witchers", FormMethod.Post))
{
    @Html.HiddenFor(model=>model.SchoolId)
    <div class="form-group">
        Nazwa
        <div class="col-md">@Html.TextBoxFor(model => model.Name, new { style = "width: 40%", placeholder = "Podaj imię..." })</div>
    </div>
    <div class="form-group">
        Nazwa
        <div class="col-md">@Html.TextBoxFor(model => model.PhoneNumber, new { style = "width: 40%", placeholder = "Podaj numer telefonu..." })</div>
    </div>
    <input type="submit" value="Dodaj nowego wiedźmina" class="btn btn-primary" />
}
